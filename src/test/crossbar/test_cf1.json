{
    "version": 2,
    "controller": {
        "fabric": {
            "transport": null
        },
        "options": {

        }
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "universal",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "rawsocket": {
                    },
                    "websocket": {
                        "ws": {
                            "type": "websocket"
                        }
                    },
                    "web": {
                        "paths": {
                            "/": {
                                "type": "static",
                                "directory": "../web",
                                "options": {
                                    "enable_directory_listing": true
                                }
                            },
                            "info": {
                                "type": "nodeinfo"
                            },
                            "test": {
                                "type": "wap",
                                "templates": ["../templates"],
                                "sandbox": true,
                                "routes": [
                                    {
                                        "path": "/product/{product_id:int}/report/{report:str}?{year:int}&{month:int}",
                                        "method": "GET",
                                        "call": "com.example.get_product_report",
                                        "render": "product_report.html"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    ]
}